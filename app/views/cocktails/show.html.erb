<div class="container">
  <h1><%= @cocktail.name %></h1>
  <%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %>
  <div>
  <span class="h2 mr-1">Doses</span>
      <%= link_to new_cocktail_dose_path(@cocktail) do %>
        <i class="fa fa-plus-circle"></i>
    <% end %>
  </div>
  <ul>
    <% @cocktail.doses.joins(:ingredient).order(:name).each do |dose| %>
      <li>
        <span><%= dose.ingredient.name %>&mdash;<%= dose.description %></span>
        <%= link_to dose_path(dose), method: :delete, 
            data: { confirm: "Are you sure you want to delete this dose?" } do %>
          <i class="fa fa-trash"></i>
        <% end %>
      </li>
    <% end %>
  </ul>

  <div>
    <%= link_to "<- Back to cocktails", cocktails_path %>
  </div>
</div>
