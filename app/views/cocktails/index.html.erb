<div class="container">
  <div class="my-3">
    <span class="h1 mr-1">Cocktails</span>
    <%= link_to new_cocktail_path do %>
      <i class="fa fa-plus-circle"></i>
    <% end %>
  </div>
  <div class="d-flex">
    <ul>
      <% @cocktails.each do |cocktail| %>
        <li><%= link_to cocktail.name, cocktail_path(cocktail) %></li>
      <% end %>
    </ul>
  </div>
</div>
